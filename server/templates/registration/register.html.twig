{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="section" style="background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%); min-height: 100vh; display: flex; align-items: center;">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5-tablet is-4-desktop">
                    <div class="box" style="background-color: #1a1a1a; border: 1px solid #2a2a2a; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);">

                        {# Logo/Brand #}
                        <div class="has-text-centered mb-5">
                            <h1 class="title is-3 has-text-white mb-2">
                            <span class="icon-text">
                                <span class="icon has-text-info">
                                    <i class="fas fa-server"></i>
                                </span>
                                <span>2GS</span>
                            </span>
                            </h1>
                            <p class="subtitle is-6 has-text-grey-light">Create your account</p>
                        </div>

                        {# Form Errors #}
                        {{ form_errors(registrationForm) }}

                        {# Registration Form #}
                        {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}

                        {# Username Field #}
                        <div class="field mb-4">
                            {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'label has-text-grey-light'}}) }}
                            <div class="control has-icons-left">
                                {{ form_widget(registrationForm.username, {
                                    'attr': {
                                        'class': 'input',
                                        'style': 'background-color: #2a2a2a; border-color: #3a3a3a; color: #ffffff;',
                                        'placeholder': 'Choose a username'
                                    }
                                }) }}
                                <span class="icon is-small is-left has-text-grey">
                                <i class="fas fa-user"></i>
                            </span>
                            </div>
                            {{ form_errors(registrationForm.username) }}
                        </div>

                        {# Password Field #}
                        <div class="field mb-4">
                            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'label has-text-grey-light'}}) }}
                            <div class="control has-icons-left">
                                {{ form_widget(registrationForm.plainPassword, {
                                    'attr': {
                                        'class': 'input',
                                        'style': 'background-color: #2a2a2a; border-color: #3a3a3a; color: #ffffff;',
                                        'placeholder': 'Create a strong password'
                                    }
                                }) }}
                                <span class="icon is-small is-left has-text-grey">
                                <i class="fas fa-lock"></i>
                            </span>
                            </div>
                            {{ form_errors(registrationForm.plainPassword) }}
                            <p class="help has-text-grey-light is-size-7 mt-2">
                                Must be at least 8 characters long
                            </p>
                        </div>

                        {# Terms Agreement #}
                        <div class="field mb-5">
                            <div class="control">
                                <label class="checkbox has-text-grey-light">
                                    {{ form_widget(registrationForm.agreeTerms, {
                                        'attr': {
                                            'style': 'margin-right: 0.5rem;'
                                        }
                                    }) }}
                                    I agree to the
                                    <a href="{{ path('app_policy_tos') }}" class="has-text-info" target="_blank">Terms of Service</a>
                                    and
                                    <a href="{{ path('app_policy') }}" class="has-text-info" target="_blank">Privacy Policy</a>
                                </label>
                            </div>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        {# Submit Button #}
                        <div class="field">
                            <div class="control">
                                <button class="button is-info is-fullwidth is-medium" type="submit">
                                <span class="icon">
                                    <i class="fas fa-user-plus"></i>
                                </span>
                                    <span>Create Account</span>
                                </button>
                            </div>
                        </div>

                        {# Sign In Link #}
                        <div class="has-text-centered mt-4">
                            <p class="has-text-grey-light is-size-7">
                                Already have an account?
                                <a href="{{ path('app_login') }}" class="has-text-info">Sign in</a>
                            </p>
                        </div>

                        {{ form_end(registrationForm) }}

                    </div>

                    {# Additional Help Text #}
                    <div class="has-text-centered mt-4">
                        <p class="has-text-grey is-size-7">
                            Need help? <a href="#" class="has-text-info">Contact Support</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <style>
        /* Custom styling for Symfony form errors */
        .registration-form .invalid-feedback,
        .registration-form .form-error-message {
            display: block;
            color: #f14668;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .registration-form .form-error-icon {
            display: none;
        }

        /* Style for checkbox */
        .registration-form input[type="checkbox"] {
            margin-right: 0.5rem;
        }

        /* Input focus states */
        .registration-form .input:focus {
            border-color: #3e8ed0;
            box-shadow: 0 0 0 0.125em rgba(62, 142, 208, 0.25);
        }

        /* Error notification styling */
        .registration-form .notification.is-danger {
            background-color: rgba(241, 70, 104, 0.1);
            border: 1px solid #f14668;
            color: #f14668;
        }
    </style>
{% endblock %}
