{% extends 'dashboard/dashboard_base.html.twig' %}

{% block content %}
    <div class="level mb-5">
        <div class="level-left">
            <div class="level-item">
                <h2 class="title is-4" style="color: #ffffff; margin: 0;">Games</h2>
            </div>
        </div>
        <div class="level-right">
            <a href="{{ path('app_game_create') }}" class="level-item">
                <button class="button is-info">
                            <span class="icon">
                                <i class="fas fa-plus"></i>
                            </span>
                    <span>New Game</span>
                </button>
            </a>
        </div>
    </div>
    <table class="table is-fullwidth is-hoverable" style="background-color: #1a1a1a;">
        <thead>
        <tr>
            <th style="color: var(--bulma-primary);">Name</th>
            <th style="color: var(--bulma-primary);">Users</th>
            <th style="color: var(--bulma-primary);">Clients</th>
            <th style="color: var(--bulma-primary);">Resources</th>
            <th style="color: var(--bulma-primary); text-align: right;">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if games is defined and games|length > 0 %}
            {% for game in games %}
                <tr style="background-color: #1a1a1a; border-color: #2a2a2a;">
                    <td style="color: #ffffff; border-color: #2a2a2a;">
                        <strong>{{ game.name }}</strong>
                    </td>
                    <td style="color: #b0b0b0; border-color: #2a2a2a;">
                        <span class="tag is-dark">{{ game.users|length }}</span>
                    </td>
                    <td style="color: #b0b0b0; border-color: #2a2a2a;">
                        <span class="tag is-dark">{{ game.clients|length }}</span>
                    </td>
                    <td style="color: #b0b0b0; border-color: #2a2a2a;">
                        <span class="tag is-dark">{{ game.ressources|length }}</span>
                    </td>
                    <td style="border-color: #2a2a2a; text-align: right;">
                        <div class="buttons is-right">
                            <button class="button is-small is-info is-outlined" disabled>
                                            <span class="icon is-small">
                                                <i class="fas fa-eye"></i>
                                            </span>
                            </button>
                            <a href="{{ path('app_game_edit', {id: game.id}) }}" class="button is-small is-warning is-outlined">
                                            <span class="icon is-small">
                                                <i class="fas fa-edit"></i>
                                            </span>
                            </a>
                            <form method="post" action="{{ path('app_game_delete', { id: game.id }) }}" style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this game?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_game_' ~ game.id) }}">
                                <button class="button is-small is-danger is-outlined">
                                    <span class="icon is-small">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr style="background-color: #1a1a1a;">
                <td colspan="5" style="text-align: center; padding: 3rem; color: #666666; border-color: #2a2a2a;">
                                <span class="icon is-large" style="color: #3a3a3a;">
                                    <i class="fas fa-inbox fa-3x"></i>
                                </span>
                    <p class="mt-3" style="font-size: 1.2rem;">No games found</p>
                    <p class="mt-2" style="color: #555555;">Create your first game to get started</p>
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <style>
        .table.is-hoverable tbody tr:hover {
            background-color: #252525 !important;
        }

        .button.is-info.is-outlined:hover,
        .button.is-warning.is-outlined:hover,
        .button.is-danger.is-outlined:hover {
            background-color: transparent;
            opacity: 0.8;
        }

        .pagination-link:hover {
            background-color: #3a3a3a !important;
        }
    </style>
{% endblock %}
