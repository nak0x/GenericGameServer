{% extends 'base.html.twig' %}

{% block title %}2GS - Admin dashboard{% endblock %}

{% block body %}
    <div class="dashboard-wrapper">
        {# Left Sidebar #}
        <aside class="dashboard-sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-server"></i>
                <span>2GS</span>
            </div>

            <nav class="sidebar-menu">
                <a href="#" class="menu-item is-active">
                    <i class="fas fa-dice"></i>
                    <span>Games</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-server"></i>
                    <span>Servers</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-users"></i>
                    <span>Players</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-file-alt"></i>
                    <span>Logs</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-credit-card"></i>
                    <span>Billing</span>
                </a>

                <div class="menu-divider"></div>

                <a href="#" class="menu-item">
                    <i class="fas fa-question-circle"></i>
                    <span>Help</span>
                </a>
                <a href="{{ path('app_logout') }}" class="menu-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>

        {# Main Content Area #}
        <div class="dashboard-main">
            {# Top Breadcrumb #}
            <nav class="breadcrumb-bar" aria-label="breadcrumbs">
                <div class="container is-fluid">
                    <nav class="breadcrumb has-arrow-separator" aria-label="breadcrumbs">
                        <ul>
                            <li><a href="#">Dashboard</a></li>
                            <li class="is-active"><a href="#" aria-current="page">Overview</a></li>
                        </ul>
                    </nav>

                    <div class="breadcrumb-actions">
                        <button class="button is-small is-info">
                        <span class="icon">
                            <i class="fas fa-plus"></i>
                        </span>
                            <span>New Server</span>
                        </button>
                    </div>
                </div>
            </nav>

            {# Content Section #}
            <section class="dashboard-content">
                {% block content %}{% endblock %}
            </section>
        </div>
    </div>

    <style>
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
            background-color: #0a0a0a;
        }

        /* Sidebar Styles */
        .dashboard-sidebar {
            width: 260px;
            background-color: #1a1a1a;
            border-right: 1px solid #2a2a2a;
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar-brand {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--bulma-primary);
            border-bottom: 1px solid #2a2a2a;
        }

        .sidebar-brand i {
            font-size: 1.5rem;
        }

        .sidebar-menu {
            padding: 1rem 0;
            flex: 1;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1.5rem;
            color: #b5b5b5;
            text-decoration: none;
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
        }

        .menu-item:hover {
            background-color: #2a2a2a;
            color: var(--bulma-primary);
        }

        .menu-item.is-active {
            background-color: rgba(0, 209, 178, 0.1);
            color: var(--bulma-primary);
            border-left-color: var(--bulma-primary);
        }

        .menu-item i {
            width: 20px;
            text-align: center;
        }

        .menu-divider {
            height: 1px;
            background-color: #2a2a2a;
            margin: 1rem 0;
        }

        /* Main Content Styles */
        .dashboard-main {
            flex: 1;
            margin-left: 260px;
            display: flex;
            flex-direction: column;
            height: 100dvh;
        }

        /* Breadcrumb Bar */
        .breadcrumb-bar {
            background-color: #1a1a1a;
            border-bottom: 1px solid #2a2a2a;
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .breadcrumb-bar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .breadcrumb-bar .breadcrumb {
            margin-bottom: 0;
        }

        .breadcrumb a {
            color: #b5b5b5;
            transition: color 0.2s ease;
        }

        .breadcrumb a:hover {
            color: var(--bulma-primary);
        }

        .breadcrumb li.is-active a {
            color: var(--bulma-primary);
        }

        .breadcrumb li + li::before {
            color: #4a4a4a;
        }

        /* Dashboard Content */
        .dashboard-content {
            flex: 1;
            padding: 2rem;
        }

        .placeholder-content {
            text-align: center;
            color: #b5b5b5;
        }

        .placeholder-content i {
            font-size: 4rem;
            color: #4a4a4a;
            margin-bottom: 1rem;
        }

        .placeholder-content .title {
            color: #e0e0e0;
            margin-bottom: 0.5rem;
        }

        .placeholder-content .subtitle {
            color: #b5b5b5;
        }

        /* Mobile Responsive */
        @media screen and (max-width: 768px) {
            .dashboard-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .dashboard-sidebar.is-active {
                transform: translateX(0);
            }

            .dashboard-main {
                margin-left: 0;
            }

            .breadcrumb-bar .container {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
        }
    </style>
{% endblock %}
